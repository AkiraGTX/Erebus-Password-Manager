@model VaultCreateViewModel
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="container">
    <div style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">@StringResources.VaultCreation</div>
            </div>

            <div style="padding-top:30px" class="panel-body">
                <form class="form-horizontal" role="form" asp-action="Create" autocomplete="off" >

                    <div class="input-group focused-input-wrapper">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-folder-open"></i></span>
                        <input asp-for="VaultName" class="form-control" placeholder="@StringResources.Name"/>
                    </div>

                    <div class="input-group focused-input-wrapper">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" class="form-control" asp-for="MasterPassword" placeholder="@StringResources.MasterPassword">
                    </div>

                    <div class="input-group focused-input-wrapper">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" class="form-control" asp-for="MasterPasswordConfirm" placeholder="@StringResources.MasterPasswordConfirm">
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    
                    
                    @*<p class="bg-warning">@StringResources.VaultCreationMasterPasswordWarning</p>*@
                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->
                        <div class="col-sm-6 controls col-md-offset-5">
                            <button type="submit" class="btn btn-success">@StringResources.Create</button>
                        </div>
                    </div>


                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="glyphicon glyphicon-alert"></span> @StringResources.Warning</h3>
                        </div>
                        <div class="panel-body">
                            <h5>@StringResources.VaultCreationMasterPasswordWarning</h5>
                        </div>
                    </div>
                </form>


            </div>
        </div>
    </div>

</div>
