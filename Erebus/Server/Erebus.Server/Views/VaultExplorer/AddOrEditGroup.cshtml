@model GroupEditViewModel

<bootstrap-modal id="modal-@Model.Id">
    <modal-body>
        <form id="form-@Model.Id" asp-action="AddOrEditGroup">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ParentId" />

            <div class="form-group">
                <label asp-for="Name" add-metadata-classes="true"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" />
            </div>


            <label></label>
        </form>
    </modal-body>
    <modal-footer>
        <button id="modal-@Model.Id-save-btn" type="button" class="btn btn-primary">@StringResources.Save</button>
        @*<button type="button" class="btn btn-default" data-dismiss="modal">@StringResources.Cancel</button>*@
    </modal-footer>
</bootstrap-modal>

<script type="text/javascript">
    $.validator.unobtrusive.parse($('#form-@Model.Id'));
    $("#modal-@Model.Id").modal("show");
    $("#modal-@Model.Id-save-btn").on("click", function () {
        vaultExplorerIndex.submitEditForm('form-@Model.Id', 'modal-@Model.Id', '@Model.Id', false);
    });
</script>