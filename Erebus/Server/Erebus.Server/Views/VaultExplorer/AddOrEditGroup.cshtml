@model GroupEditViewModel

<bootstrap-modal id="modal-@Model.Id" title="@Model.ModalTitle">
    <modal-body>
        <form id="form-@Model.Id" asp-action="AddOrEditGroup">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ParentId" />

            <div class="form-group">
                <label asp-for="Name" add-metadata-classes="true"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" />
            </div>
        </form>
    </modal-body>
    <modal-footer>
        <button id="modal-@Model.Id-save-btn" type="button" class="btn btn-primary">@StringResources.Save</button>
    </modal-footer>
</bootstrap-modal>

<script type="text/javascript">
    $.validator.unobtrusive.parse($('#form-@Model.Id'));
    $("#modal-@Model.Id").modal({ backdrop: 'static', keyboard: false });
    $("#modal-@Model.Id-save-btn").on("click", function () {
        vaultExplorerIndex.submitGroupEditForm('form-@Model.Id', 'modal-@Model.Id', '@Model.ParentId');
    });
</script>