@model EntryEditViewModel

<bootstrap-modal id="modal-@Model.Id" title="@Model.ModalTitle">
    <modal-body>
        <form id="form-@Model.Id" asp-action="AddOrEditEntry">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ParentId" />
            <div class="form-group">
                <label asp-for="Title" add-metadata-classes="true"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="UserName" add-metadata-classes="true"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input asp-for="UserName" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Password" add-metadata-classes="true"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="Password" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Url" add-metadata-classes="true"></label>
                <span asp-validation-for="Url" class="text-danger"></span>
                <input asp-for="Url" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Description" add-metadata-classes="true"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
                <input asp-for="Description" class="form-control" />
            </div>
        </form>
    </modal-body>
    <modal-footer>
        <button id="modal-@Model.Id-save-btn" type="button" class="btn btn-primary">@StringResources.Save</button>
    </modal-footer>
</bootstrap-modal>

<script type="text/javascript">
    $.validator.unobtrusive.parse($('#form-@Model.Id'));
    $("#modal-@Model.Id").modal("show");
    $("#modal-@Model.Id-save-btn").on("click", function () {
        vaultExplorerIndex.submitEntryEditForm('form-@Model.Id', 'modal-@Model.Id', '@Model.ParentId');
    });
</script>